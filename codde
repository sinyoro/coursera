# TASK 4:        
# Add a callback function for `site-dropdown` and `payload-slider` as inputs, `success-payload-scatter-chart` as output

@app.callback (Output(component_id='success-payload-scatter-chart', component_property='figure'),
              [Input(component_id='site-dropdown', component_property='value'), Input(component_id="payload-slider", component_property="value")])
def get_scatter_plot(entered_site):
    if enterd_site == 'ALL':
        figg = px.scatter(spacex_df, x="Payload Mass (kg)", y="class", color="Booster Version Category")
        return figg
	else:  
        dap_df = spacex_df[spacex_df['Launch Site']=='enterd_site']   
        figgg = px.scatter(dap_df, x="Payload Mass (kg)", y="class", color="Booster Version Category")
	return figgg 

# Run the app
if __name__ == '__main__':
    app.run_server()
